# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: postgresql://user:password@localhost:5432/free2fetch

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# OAuth Udemy Configuration
UDEMY_CLIENT_ID=your-udemy-client-id
UDEMY_CLIENT_SECRET=your-udemy-client-secret

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@free2fetch.com

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Storage Configuration
STORAGE_ROOT=/path/to/storage/directory

# Free2Fetch Specific Settings
DEFAULT_DOWNLOAD_LIMIT=3
MAX_CONCURRENT_DOWNLOADS=2
DOWNLOAD_EXPIRY_DAYS=30
MAX_FILE_SIZE_MB=500
ENABLE_STREAMING=True
ENABLE_SHARING=True
RATE_LIMIT_PER_HOUR=100

# Monitoring and Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Payment Processing (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_SENDER_DOMAIN=mg.yourdomain.com

# Security
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False